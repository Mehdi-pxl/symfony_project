{% extends 'base.html.twig' %}

{% block title %}Télécharger mon CV{% endblock %}

{% block body %}
<section class="bg-primary text-white py-5">
    <div class="container text-center">
        <h1 class="display-4 fw-bold">
            <i class="bi bi-download"></i> Télécharger mon CV
        </h1>
        <p class="lead">Merci de remplir ce formulaire pour obtenir mon CV en PDF</p>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <i class="bi bi-file-earmark-pdf text-danger" style="font-size: 4rem;"></i>
                            <h3 class="mt-3">Demande de CV</h3>
                            <p class="text-muted">Toutes les informations sont requises et sécurisées (RGPD)</p>
                        </div>

                        {{ form_start(form, {'attr': {'data-turbo': 'false'}}) }}
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.nom) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.prenom) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.email) }}
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-shield-check"></i> <strong>Protection des données :</strong>
                            Vos informations sont uniquement utilisées pour personnaliser le téléchargement. 
                            Elles ne sont ni stockées ni partagées avec des tiers.
                        </div>

                        {{ form_row(form.telecharger) }}
                        
                        {{ form_end(form) }}

                        <div class="text-center mt-4">
                            <a href="{{ path('app_cv') }}" class="btn btn-outline-secondary">
                                <i class="bi bi-eye"></i> Consulter le CV en ligne
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
