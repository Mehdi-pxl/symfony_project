{% extends 'base.html.twig' %}

{% block title %}Accueil - Mehdi MOUMITE{% endblock %}

{% block body %}
<!-- En-tête -->
<section class="bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-3 fw-bold">MOUMITE Mehdi</h1>
                <p class="lead">Groupe TP B1 - Étudiant en BUT Réseaux & Télécommunications</p>
                <p class="fs-5 mb-4">Passionné par les réseaux informatiques et la cybersécurité</p>
                <p class="mb-4">
                    Actuellement en première année de BUT R&T à l'IUT de Roanne. 
                    Je cherche à développer mes compétences en administration réseau et sécurité informatique.
                </p>
                <div class="mt-4">
                    <a href="{{ path('app_cv') }}" class="btn btn-warning btn-lg me-2">
                        Mon CV
                    </a>
                    <a href="{{ path('app_portfolio') }}" class="btn btn-outline-light btn-lg">
                        Mon Portfolio
                    </a>
                </div>
            </div>
            <div class="col-md-4 text-center">
                <img src="{{ asset('images/profile.jpg') }}" alt="Mehdi MOUMITE" 
                     class="img-fluid rounded-circle shadow-lg" style="max-width: 280px;">
            </div>
        </div>
    </div>
</section>

<!-- Pour en savoir plus -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">Pour en savoir plus</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-images text-primary" style="font-size: 3rem;"></i>
                        <h5 class="card-title mt-3">Mes loisirs</h5>
                        <p class="card-text">Découvrez mes passions et centres d'intérêt</p>
                        <a href="{{ path('app_galerie') }}" class="btn btn-primary mt-2">
                            Voir la galerie
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-file-earmark-person text-success" style="font-size: 3rem;"></i>
                        <h5 class="card-title mt-3">Mon CV</h5>
                        <p class="card-text">Formations, expériences et compétences</p>
                        <a href="{{ path('app_cv') }}" class="btn btn-success mt-2">
                            Consulter mon CV
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-trophy text-warning" style="font-size: 3rem;"></i>
                        <h5 class="card-title mt-3">Mes compétences</h5>
                        <p class="card-text">Portfolio avec preuves et réalisations</p>
                        <a href="{{ path('app_portfolio') }}" class="btn btn-warning mt-2">
                            Voir le portfolio
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Téléchargement CV -->
<section class="bg-light py-5">
    <div class="container text-center">
        <h3 class="mb-3">Vous souhaitez télécharger mon CV ?</h3>
        <p class="mb-4">Remplissez un court formulaire et obtenez mon CV au format PDF</p>
        <a href="{{ path('app_download_cv') }}" class="btn btn-primary btn-lg">
            Télécharger mon CV
        </a>
    </div>
</section>
{% endblock %}